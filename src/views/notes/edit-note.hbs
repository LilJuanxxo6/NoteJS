<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Title" value="{{note.title}}">
                </div>
                <div class="form-group mt-3">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" name="description" placeholder="Description" rows="3">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary w-100 mt-3" type="submit">Update Note</button>
                </div>
            </form>

        </div>
    </div>
</div>