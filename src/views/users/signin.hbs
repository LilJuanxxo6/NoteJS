<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="/img/logo.png" alt="Logo" class="rounded-circle mx-auto d-block logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Enter your email" autofocus>
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control" name="password" placeholder="Enter your password">
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary w-100">SignIn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>